<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/catalog.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{dd.MM.yyyy HH:mm:ss} [%thread] %-5level in %logger%n%message%n</pattern>
        </encoder>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{dd.MM.yyyy HH:mm:ss} [%thread] %-5level in %logger%n%message%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache" level="warn"/>
    <logger name="org.springframework" level="warn"/>
    <logger name="org.hibernate" level="warn"/>
    <logger name="org.jboss" level="warn"/>
    <logger name="h2database" level="warn"/>
    <logger name="org.slf4j" level="warn"/>
    <logger name="ch.qos" level="warn"/>
    <logger name="net.sf.ehcache" level="warn"/>
    <logger name="org.dozer" level="warn"/>
    <logger name="cz.vhromada" level="all"/>
    <root level="all">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
